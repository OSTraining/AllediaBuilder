<?xml version="1.0" encoding="UTF-8"?>
<project name="Symlinker" default="">

    <!-- Create symlinks for the extension in development environments -->
    <target name="symlink">
        <input propertyName="basepath" message="Base Path: "/>
        <createsymlinks mapfile="${phing.dir}/../symlinks.yml" basepath="${basepath}" phingdir="${phing.dir}"/>
    </target>

</project>
